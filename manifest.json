{
  "manifest_version": 2,
  "name": "OTMT Data Copier",
  "description": "Copies data from one site to another",
  "version": "0.3",
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["main.js"]
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.module.js"],
      "css": ["dist/main.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "contextMenus",
    "cookies",
    "storage",
    "unlimitedStorage",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy":
    "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "commands": {
    "toggle-workbench": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Transfer data"
    }
  },
  "options_ui": {
    "page": "options/index.html",
    "chrome_style": false
  },
  "web_accessible_resources": ["dist/*", "icons/*", "popup/*", "options/*"]
}
